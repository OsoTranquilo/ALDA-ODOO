<openerp>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="category_tourism.list">
      <field name="name">category_tourism list</field>
      <field name="model">category_tourism.category_tourism</field>
      <field name="arch" type="xml">
        <tree>
          <field name="category"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="category_action_window">
      <field name="name">category_tourism window</field>
      <field name="res_model">category_tourism.category_tourism</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="menu_category_tourism"
        name="Category Tourism Codes"
        parent="hotel.hotel_configuration_menu"
        sequence="30"
        action="category_tourism.category_action_window"
    />


    <!-- server action to the one above -->
    <record model="ir.actions.server" id="category_tourism.action_server">
      <field name="name">category_tourism server</field>
      <field name="model_id" ref="model_category_tourism_category_tourism"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

