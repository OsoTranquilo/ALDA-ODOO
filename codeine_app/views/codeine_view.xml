<?xml version="1.0"?> 
    <openerp>      
        <data> 
        <!-- Action to open INE Codes list -->
            <act_window
                id="action_codeine_task"
                name="INE Codes"
                res_model="codeine.task"
                view_mode="tree,form"
            /> 
        <!-- Menu item to open INE Codes list --> 
            <menuitem 
                id="menu_codeine_task"
                name="INE Codes"
                parent="hotel.hotel_configuration_menu"
                sequence="25"
                action="action_codeine_task"
            />
            <record id="view_form_codeine_task" model="ir.ui.view">
                <field name="name">INE Code Task Form</field>
                <field name="model">codeine.task</field>
                <field name="arch" type="xml">
                    <form>
                        <sheet>
                            <group name="group_top">
                                <group name="group_left">
                                    <field name="place"/>
                                </group>
                                <group name="group_right">
                                    <field name="code"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>
            <record id="view_tree_codeine_task" model="ir.ui.view">
                <field name="name">INE Codes Task Tree</field>
                <field name="model">codeine.task</field>
                <field name="arch" type="xml">
                    <tree>
                        <field name="code"/>
                        <field name="place"/>
                    </tree>
                </field>
            </record>
            <record id="codeine_app.view_filter_codeine_task" model="ir.ui.view">
                <field name="name">INE Codes Task Filter</field>
                <field name="model">codeine.task</field>
                <field name="arch" type="xml">
                    <search>
                        <field name="code" string="By Code"/>
                        <field name="place" string="By Place"/>
                    </search>
                </field>
            </record>
        </data>
    </openerp>