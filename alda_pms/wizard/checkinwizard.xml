<?xml version="1.0"?> 
    <openerp>      
        <data> 

            <record id="launch_checkin_wizard_add" model="ir.actions.act_window">
                <field name="name">Add Check</field>
                <field name="res_model">checkin.wizard</field>
                <field name="view_id" ref="checkin_wizard_form_2"/>
            </record>

                        
            <act_window id="launch_checkin_wizard"
                        name="List Checkin"
                        res_model="checkin.wizard"
                        view_mode="form"
                        target="new"
                        key2="client_action_multi"/>

            <record id="checkin_wizard_form_view" model="ir.ui.view">
                <field name="name">wizard.form</field>
                <field name="model">checkin.wizard</field>
                <field name="arch" type="xml">
                    <form string="List Checkin">
                    <sheet>
                        <group col="4">
                        <label for="reservation_id" string="Resevation"/>
                        <h1><field name="reservation_id"  readonly="1"/></h1>
                        <button type="action" class="oe_stat_button" id="cardex_smart_button" icon="fa-bed" name="%(launch_checkin_wizard_add)d">
                            <div><field name="pending_cardex" string="Check-in" widget="statinfo"/></div>
                        </button>
                        </group>
                            <field name="cardex_ids" readonly="1"/>
                        </sheet>
                    </form>
                </field>
            </record>



            <record id="checkin_wizard_form_2" model="ir.ui.view">
                <field name="name">wizard.form2</field>
                <field name="model">checkin.wizard</field>
                <field name="arch" type="xml">
                    <form string="Add Checkin">
                    <sheet>
                        <group col="4">
                        <label for="reservation_id" string="Resevation"/>
                        <h1><field name="reservation_id"  readonly="1"/></h1>
                        </group>
                            <field name="cardex_ids" readonly="1"
                                attrs="{'invisible': [('list_checkin_cardex','=','False')]}"/>
                        <group col="4">
                            <field name="enter_date" colspan="2"/>
                            <field name="exit_date" colspan="2"/>
                        </group>
                        <group>
                            <field name="partner_id" string="Client name" style="max-width: 95%%"/>
                        </group>
                        <group col="4">
                            <field name="firstname_cardex" colspan="2"/>
                            <field name="lastname_cardex" colspan="2"/>
                        </group>
                        <group col="4">
                            <field name="poldocument_cardex" colspan="2"/>
                            <newline/>
                            <field name="documenttype_cardex" colspan="2"/>
                            <field name="polexpedition_cardex" colspan="2"/>
                        </group>
                        <group col="4">
                            <field name="gender_cardex" colspan="2"/>
                            <field name="birthdate_date_cardex" colspan="2"/>
                        </group>
                        <group col="4">
                            <field name="email_cardex" colspan="2"/>
                            <field name="mobile_cardex" colspan="2"/>
                        </group>
                        <group>
                            <field name="code_ine_cardex" placeholder="Code in INE" options="{'no_create': True,'no_open': True}" colspan="2"/>
                            <newline/>
                            <field name="category_id_cardex" widget="many2many_tags" placeholder="Tags..." colspan="2"/>
                        </group>
<!--                         <button string="Close" name="action_close_check" type="object" class="btn-primary" />
                        <button string="Save" name="action_save_check" type="object"/> -->
                        <footer> 
                            <button name="write" type="object" string="Save new line" class="btn-primary"/>
                            <button name="cancel" string="Cancel" special="cancel"/>
                        </footer>
                    </sheet>
                    </form>
                </field>
            </record>

        </data>

    </openerp>